<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.indebt">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_debt_app"
        android:label="@string/debt_list"
        android:roundIcon="@drawable/ic_debt_app"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".activity.SignUpActivity" />
        <activity android:name=".activity.LoginActivity" />
        <activity android:name=".activity.BorrowerListActivity" />
        <activity android:name=".activity.DebtListActivity" />
        <activity android:name=".activity.AddDebtActivity" />
    </application>

</manifest>